@model UserRegisterViewModel

@{
    ViewData["Title"] = "Register New User";
}

<form id="myForm" asp-action="create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="" autofocus />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="" autofocus />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="EmployeeId"></label>
                <input asp-for="EmployeeId" class="form-control" placeholder="" autofocus />
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="" autofocus />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" placeholder="" autofocus />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" placeholder="" autofocus />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="" autofocus />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
    </div>

    <hr />
    <button type="submit" class="btn btn-info"><i class="fas fa-database"></i> Save </button>
    <button id="resetBtn" type="reset" class="btn btn-danger"><i class="fas fa-ban"></i> Cancel</button>
</form>

@section scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")

<script>
        (function () {

            $(function () {

                $("button:reset").on("click", function () {

                    var url = '@Url.Action("Index")';
                    window.location.href = url;

                });
            });
        })();
</script>
}