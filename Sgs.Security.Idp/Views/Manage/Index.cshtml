@model UserViewModel
@{
    ViewData["Title"] = "Manage Your Profile";
    //ViewData.AddActivePage(ManageNavPages.Index);
}

@Html.Partial("_StatusMessage", ViewData["StatusMessage"])
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <input type="hidden" asp-for="Id"/>

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <label asp-for="Name" class="float-right">الاسم الثلاثي</label>
                <input asp-for="Name" class="form-control text-center" />
            </div>
            <div class="form-group">
                <label asp-for="UserName">User name</label>
                <label asp-for="UserName" class="float-right">اسم المستخدم</label>
                <input asp-for="UserName" class="form-control text-center" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <label asp-for="Email" class="float-right">البريد الالكتروني</label>
                @if (Model.EmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="Email" class="form-control text-center" />
                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                    </div>
                }
                else
                {
                    <input asp-for="Email" class="form-control text-center" />
                    <button asp-action="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                }
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control text-center" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeId"></label>
                <input asp-for="EmployeeId" class="form-control text-center" />
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <br />
            <button type="submit" class="btn btn-info btn-block">Save - حفظ</button>
        </form>
    </div>
</div>

@section scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
