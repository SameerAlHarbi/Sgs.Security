@model string

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger" id="myModalLabel">Are you sure to <span id="myModalAction">delete</span> this @Model ?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <dl>
                    <dt>@Model :</dt>
                    <dd id="myModelName"></dd>
                </dl>
            </div>
            <div class="modal-footer">
                <button id="myModalOk" type="button" class="btn btn-danger" data-dismiss="modal">Yes</button>
                <button id="myModalCancel" type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>

<script>
    (function () {

        $(function () {

            $("a[data-target='#myModal']").on("click", function () {
                alert("ok");
                if ($(this).data("text")) {
                    $("#myModelName").text($(this).data("text"));
                }

                if ($(this).data("action")) {
                    alert("ok");
                    $("#myModalAction").text($(this).data("action"));
                }
            });

        });

    })
</script>